rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Meetings collection
    match /meetings/{meetingId} {
      allow read: if request.auth != null && request.auth.token.email_verified;
      allow create: if request.auth != null && request.auth.token.email_verified;
      allow update: if request.auth != null && 
                      request.auth.token.email_verified &&
                      (resource.data.createdBy.id == request.auth.uid || 
                       request.auth.token.email in resource.data.participants[].email);
      allow delete: if request.auth != null && 
                      request.auth.token.email_verified &&
                      resource.data.createdBy.id == request.auth.uid;
    }
    
    // Users collection (for future user profiles)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
